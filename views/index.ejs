<%- include('./partials/head') %>
<body>
    <%- include('./partials/navbar') %>

    <div class="container mt-5">
        <h1>Текущи мачове на живо</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Домакин</th>
                    <th>Резултат</th>
                    <th>Гост</th>
                    <th>Статус</th>
                    <th>Минута</th>
                </tr>
            </thead>
            <tbody>
                <% if (liveMatches && liveMatches.length > 0) { %>
                    <% liveMatches.forEach(match => { %>
                        <tr>
                            <td><%= match.teams.home.name %></td>
                            <td>
                                <% if (match.score && match.score.fulltime) { %>
                                    <%= match.score.fulltime.home %> - <%= match.score.fulltime.away %>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                            <td><%= match.teams.away.name %></td>
                            <td><%= match.fixture.status.long %></td>
                            <td>
                                <% if (match.fixture.status.elapsed) { %>
                                    <%= match.fixture.status.elapsed %>'
                                <% } else if (match.fixture.status.short === 'NS') { %>
                                    Предстои
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="5">Няма текущи мачове на живо.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>