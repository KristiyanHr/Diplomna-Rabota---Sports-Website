<%- include('./partials/indexHead') %>
<body>
    <%- include('./partials/navbar') %>

    <div class="container mt-5">
        <h1>Текущи мачове на живо</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Home</th>
                    <th>Result</th>
                    <th>Away</th>
                    <th>Status</th>
                    <th>Minute</th>
                    <th>Odds</th>
                </tr>
            </thead>
            <tbody>
                <% if (liveMatches && liveMatches.length > 0) { %>
                    <% liveMatches.forEach(match => { %>
                        <% const matchUrl = `/match-details/${match.fixture.id}`; %>
                        <tr onclick="window.location.href='<%= matchUrl %>';" style="cursor: pointer;">
                            <td><%= match.teams.home.name %></td>
                            <td>
                                <% if (match.goals) { %>
                                    <%= match.goals.home %> : <%= match.goals.away %>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                            <td><%= match.teams.away.name %></td>
                            <td><%= match.fixture.status.long %></td>
                            <td>
                                <% if (match.fixture.status.elapsed) { %>
                                    <%= match.fixture.status.elapsed %>'
                                <% } else if (match.fixture.status.short === 'NS') { %>
                                    Starts soon
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="5">Няма текущи мачове на живо.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>